@model Application_Security_Assignment.Pages.LoginModel
@{
}
<h1>Login Page</h1>

<form method="POST" asp-antiforgery="true">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-outline mb-4">
        <label class="form-label" for="form1Example13">Email address</label>
        <input type="email" id="form1Example13" asp-for="LoginUiState.Email" class="form-control form-control-lg" />
        <span asp-validation-for="LoginUiState.Email" class="text-danger"></span>
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" for="form1Example13">Password</label>
        <input type="password" id="form1Example13" asp-for="LoginUiState.Password" class="form-control form-control-lg" />
        <span asp-validation-for="LoginUiState.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>




